generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:D:/productivity_dashboard/src/data/vodu.db"
}

model task {

  id        Int     @id @default(autoincrement())
  title     String  @unique
  description   String
  done Boolean @default(false)
  time Int @default(0)
}